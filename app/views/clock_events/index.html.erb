
<% if current_user.admin? %>
  <table>
    <thead>
      <tr>
        <th>Time in</th>
        <th>Clocking In/Out</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clock_events.each do |clock_event| %>
        <tr>
          <td><%= clock_event.time_logged %></td>
          <td><%= (clock_event.clock_in?) ? "Clocking In" : "Clocking Out" %></td>
          <td><%= link_to 'Show', clock_event %></td>
          <td><%= link_to 'Edit', edit_clock_event_path(clock_event) %></td>
          <td><%= link_to 'Delete', clock_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

<%= link_to 'create Clock In/Out', new_clock_event_path, class:"btn btn-primary" %>


